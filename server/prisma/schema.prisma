generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// VARJE GÅNG SOM MODELLERNA FÖRÄNDRAS SÅ MÅSTE DU KÖRA: (( npx prisma generate )) i terminalen
// ANVÄND INTE DESSA DE ÄR BARA ETT SHOWCASE EXEMPEL
model Post {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  title           String
  body            String
  rating          Float?
  // createdAt       DateTime @default(now())
  // updatedAt       DateTime @updatedAt
  author          User     @relation("userPostsRelation", fields: [id], references: [id])
  UserIdFromLikes String[] @db.ObjectId // IDs of users who liked the post
  likes           User[]   @relation("likesOnPost", fields: [UserIdFromLikes], references: [id])
}

model User {
  id             String          @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  email          String          @unique
  password       String
  admin          Boolean         @default(false)
  posts          Post[]          @relation("userPostsRelation")
  likedPostIDs   String[]        @db.ObjectId // IDs of posts this user liked
  likedPosts     Post[]          @relation("likesOnPost", fields: [likedPostIDs], references: [id])
  UserPreference UserPreference?
  role           Role            @default(USER)
}

model UserPreference {
  id           String  @id @default(auto()) @map("_id") @db.ObjectId
  emailUpdates Boolean @default(false)
  user         User    @relation(fields: [userId], references: [id])
  userId       String  @unique @db.ObjectId
}

enum Role {
  USER
  ADMIN
}
